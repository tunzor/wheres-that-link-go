{
   "name":"Where's that link go?",
   "version":"1.0",
   "description":"Preview links before clicking on them! Popup background colour shows if link is on same domain, shortened, or somewhere else.",
   "manifest_version": 2,
   "permissions":[
      "activeTab",
      "storage",
      "declarativeContent"
   ],
   "icons":{
      "16":"images/hand-32.png",
      "32":"images/hand-32.png",
      "48":"images/hand-32.png",
      "128":"images/hand-32.png"
   },
   "browser_action": {
      "default_title": "Where's That Link Go? (Click to toggle)"
   },
   "background": {
      "scripts": ["toggle.js"]
   },
   "content_scripts":[{
      "matches": ["http://*/*", "https://*/*"],
      "js":[
         "third-party/jquery.min.js",
         "hover.js"
      ],
      "run_at": "document_idle"
   }]
}
