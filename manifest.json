{
   "name":"Where's that link go?",
   "version":"1.0",
   "description":"Preview where links go before clicking on them. Also expands and shows shortened links.",
   "manifest_version":2,
   "permissions":[
      "activeTab"
   ],
   "icons":{
      "16":"images/hand_128.png",
      "32":"images/hand_128.png",
      "48":"images/hand_128.png",
      "128":"images/hand_128.png"
   },
   "browser_action": {
      "default_title": "Where's That Link Go?",
      "default_popup": "tooltipPopup.html"
   },
   "content_scripts":[{
      "matches": ["http://*/*", "https://*/*"],
      "js":[
         "third-party/jquery.min.js",
         "hover.js"
      ],
      "run_at": "document_idle"
   }]
}
